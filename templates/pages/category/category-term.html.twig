{% extends 'layout/base.html.twig' %}

{% block title%}
	{{ category.title }}
{% endblock %}

{% block body%}

	<div id="main">
		<h1>{{ category.title }}</h1>

		{% if articles %}
			<ul>
				{% for article in articles %}
					<li>
						<a href="{{ path('article', { id: article.id }) }}">
							{{ article }}
						</a>
					</li>
				{% endfor %}
			</ul>
            {% if previous >= 0 %}
            <a href="{{ path('category_item', { slug: category.slug, offset: previous }) }}">previous</a>
            {% endif %}

            {% if next <  articles|length %}
            <a href="{{ path('category_item', {slug: category.slug, offset: next }) }}">next</a>
            {% endif %}
		{% endif %}
	</div>

{% endblock %}
